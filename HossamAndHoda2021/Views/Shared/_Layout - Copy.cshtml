
<!DOCTYPE HTML>
<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="description" content="@ViewBag.MetaDescription" />
    <meta name="keywords" content="@ViewBag.Metakeywords" />
    <meta name="og:title" content="@ViewBag.OgTitle" />
    <meta name="og:description" content="@ViewBag.Ogdescription" />
    <meta name="og:url" content="@ViewBag.OgURL" />
    <meta name="og:image" content="@ViewBag.OgImageURL" />
    <meta name="author" content="HomeStyleEG.com">
    <title>@ViewBag.Title - Home Style EG</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/Content/html5up-verti/assets/css/main.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/Images/Main/Untitled-ICO.ico")" title="Home Style EG">
</head>
<body class="is-preload homepage">
    <div id="page-wrapper">

        <!-- Header -->
        <div id="header-wrapper">
            <header id="header" class="container">

                <!-- Logo -->
                <div id="logo">
                    <img src="~/Images/Main/Untitled-1-logo.png" alt="Home Style EG" class="img-fluid" width="30%" height="20%" />
                </div>

                <!-- Nav -->
                <nav id="nav">
                    <ul>
                        <li>
                            <a href="#">مستخدم</a>
                            <ul>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a href="@Url.Action("Index","PRVEMP", new {  Area="" }, null)">لوحة تحكم</a></li>
                                    <li><a href="@Url.Action("Logout","Home", new {  Area="" }, null)">خروج</a></li>
                                }
                                else
                                {
                                    <li><a href="@Url.Action("Login","Home", new {  Area="" }, null)">تسجيل</a></li>
                                }
                            </ul>
                        </li>
                        <li><a href="@Url.Action("Cart","Home", new {  Area="" }, null)" <i class="fas fa-shopping-cart"></i><span id="MyOnlineCart">0</span>العربة</a></li>
                        <li><a href="@Url.Action("Index","Home", new {  Area="" }, null)">الرئيسية</a></li>
                    </ul>
                </nav>


                </ul>
            </header>
        </div>


        <!-- Features -->
        <div id="features-wrapper">
            <div class="container">
                @RenderBody()

            </div>
        </div>

        <!-- Main -->
        <div id="main-wrapper" dir="rtl">
            <div class="container">
                <div class="row gtr-200">
                    @Html.Partial("_ContactUsForm")
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div id="footer-wrapper">
            <footer id="footer" class="container">
                <div class="row text-center">

                    <div class="col-12 col-12-medium col-12-small" dir="rtl">
                       <!-- Contact -->
                        <section class="widget contact last">
                            <h3>وسائل الإتصال</h3>
                            <ul>
                                <li><a target="_blank" href="https://www.messenger.com/t/104612055177648" class="icon brands fa-facebook-f"><span class="label">فيس بوك</span></a></li>
                                <li><a target="_blank" href="https://api.whatsapp.com/send?phone=201223592408" class="icon brands fa-whatsapp"><span class="label">واتس أب</span></a></li>
                            </ul>
                            <p>
                                Egypt, Gharbia, Tanta<br />
                                01223592408
                            </p>
                        </section>

                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div id="copyright">
                            <ul class="menu">
                                <li>&copy; جميع الحقوق محفوظة لموقع هوم ستايل ايجى</li>
                                <li>Design: <a href="https://www.doyoubuzz.com/ayman-elbatata">Developed By Ayman Elbatata</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
        </div>

    </div>

    <!-- Scripts -->

    <script src="~/Content/html5up-verti/assets/js/jquery.min.js"></script>

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/Content/html5up-verti/assets/js/jquery.dropotron.min.js"></script>
    <script src="~/Content/html5up-verti/assets/js/browser.min.js"></script>
    <script src="~/Content/html5up-verti/assets/js/breakpoints.min.js"></script>
    <script src="~/Content/html5up-verti/assets/js/util.js"></script>
    <script src="~/Content/html5up-verti/assets/js/main.js"></script>

    <script type="text/javascript">
    $(document).ready(function () {
     let url = '@Url.Action("GetCurrentCartItems", "Home", new { Area=""}, null)';
    $.post(url, { GetCount:"Cart" }, function (data, statuscode, xhr) {
        //document.getElementById("MyOnlineCart").value = (data);
        $("#MyOnlineCart").text(data);


        });
    });

    </script>
</body>
</html>
