            <a class="d-block mt-2 mb-3" target="_blank" href="https://api.whatsapp.com/send?phone=201223592408" title="@HossamAndHoda2021.Controllers.MenuList.WebsiteCompanyTXT()"><img class="img-fluid" width="30" height="30" src="~/Images/connections/Whatsapp.png" alt="@HossamAndHoda2021.Controllers.MenuList.WebsiteCompanyTXT()" /> </a>
